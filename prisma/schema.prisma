// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movies {
  id        Int     @id @default(autoincrement())
  imdbID    String  @unique
  title     String
  year     Int
  poster    Posters @relation(fields: [postersId], references: [id])
  postersId Int
}

model Posters {
  id     Int      @id @default(autoincrement())
  url    String
  Movies Movies[]
}
